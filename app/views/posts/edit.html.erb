<%= stylesheet_link_tag 'new' %>
<main class="main">
  <%= render "error_message" %>
  <%= form_with(model:@post, local:true) do |form| %>
      <div class="label_body"><%= form.label :へんしゅうちゅう！, class:"label" %></div>
      <div class="text_body"><%= form.text_area :content, class:"text" %></div>
      <div class="buttons" >
        <%= form.submit "へんしゅう", :class=>"post_button" %>
        <%= link_to posts_path do %>
          <button class="back_button">もどる</button>
        <% end %>
      </div>
  <% end %> 
</main>